##tabwidth = 5
tabs should be
	considered default
     and not normalized

multiple
	levels
	     of
     		nesting
	     should
	work
well

replace
	!int
     (+|-)?\d+

replace
     !dec
	!int(\.\d*)?(e!int)

replace
	!block\((?<block_tabs>(\\t)+)\)
	(${block_tabs}.*\n)+

define
	abs~((?<x>!dec+)~)
	if ${x} >= 0
	     ${x}
	else
		-${x}

define
	if\n\t(True)\n\t(then)(?<if_block>!block(\t\t))\t(else)(?<else_block>!block(\t\t))
	${if_block}

define
	if\n\t(False)\n\t(then)(?<if_block>!block(\t\t))\t(else)(?<else_block>!block(\t\t))
	${else_block}

define
	while(?<condition>.+)\n(?<while_block>!block(\t))
	if ${condition}
		${while_block}
		while ${condition}
	     	${while_block}